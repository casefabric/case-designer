{
  "private": true,
  "bin": {
    "deploy": "./dist/deploy/compile.ts"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.7",
    "alpaca": "~1.5.27",
    "body-parser": "^1.20.2",
    "bootstrap": "~3.3.7",
    "codemirror": "~5.49.2",
    "express": "^4.19.2",
    "handlebars": "~4.0.5",
    "@joint/core": "~4.1.3",
    "jquery": "~3.7.1",
    "jquery-ui": "~1.14.1",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "walk-sync": "^3.0.0",
    "xml-formatter": "^3.6.4"
  },
  "devDependencies": {
    "@types/@xmldom/xmldom": "^0.9.7",
    "@types/codemirror": "^5.60.16",
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.30",
    "@types/jqueryui": "^1.12.23",
    "@types/morgan": "^1.9.9",
    "@wdio/cli": "^9.12.7",
    "@wdio/junit-reporter": "^9.12.6",
    "@wdio/local-runner": "^9.12.7",
    "@wdio/mocha-framework": "^9.12.6",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dir-compare-cli": "^1.0.1",
    "html-bundler-webpack-plugin": "^4.19.0",
    "shx": "^0.3.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.3",
    "wdio-json-reporter": "^4.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist",
    "rebuild-index": "node ./indexgenerator/generate-index.mjs",
    "test-compile": "cross-env MODELER_DEPLOY_PATH=./dist/deploy_for_compare node ./dist/repository/compile.js && npm run compare-compilation-result",
    "compile": "cross-env node ./dist/repository/compile.js",
    "build-and-compile": "npm run build && npm run test-compile",
    "build": "npm run clean && npm run rebuild-index && webpack",
    "watch": "npm run clean && cross-env DEV_MODE=true webpack",
    "go": "cross-env LOG_TRAFFIC=actions SERVER_PORT=2081 node ./dist/server/server.js",
    "remove-unnecessary-types": "shx rm -rf ./dist/repository/@types/ide ./dist/repository/@types/server ./dist/repository/@types/validate",
    "copy-repository-files": "shx cp ./src/repository/@casefabric-repository-package.json ./dist/repository/package.json && shx cp ./src/repository/README.md ./dist/repository/",
    "package": "npm run copy-repository-files && npm run remove-unnecessary-types && npm pack --pack-destination=./dist ./dist/repository",
    "publishRemote": "npm run build && npm run package && cd ./dist/repository && npm publish --access public",
    "test": "wdio",
    "test-debug": "cross-env DEBUG=true wdio --spec ./test/integration/specs/caseteam.e2e.ts",
    "compare-compilation-result": "dircompare -c -w --reason -d ./repository_deploy ./dist/deploy_for_compare",
    "test-repository-library": "yarn --cwd ./test/repository_client_project install --no-lockfile && yarn --cwd ./test/repository_client_project build && yarn  --cwd ./test/repository_client_project compileModel && dircompare -c -w --reason -d ./test/repository_client_project_expected ./test/repository_client_project/dist/target"
  }
}
